<Window x:Class="PCComponentInventoryManagement.AddComponentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить компонент" Height="300" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название:"/>
            <TextBox x:Name="NameTextBox"/>
            
            <TextBlock Text="Тип:" Margin="0,10,0,0"/>
            <TextBox x:Name="TypeTextBox"/>
            
            <TextBlock Text="Производитель:" Margin="0,10,0,0"/>
            <TextBox x:Name="ManufacturerTextBox"/>
            
            <TextBlock Text="Модель:" Margin="0,10,0,0"/>
            <TextBox x:Name="ModelTextBox"/>
            
            <TextBlock Text="Цена:" Margin="0,10,0,0"/>
            <TextBox x:Name="PriceTextBox"/>
            
            <TextBlock Text="Количество:" Margin="0,10,0,0"/>
            <TextBox x:Name="QuantityTextBox"/>
            
            <Button Content="Добавить" Margin="0,20,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>